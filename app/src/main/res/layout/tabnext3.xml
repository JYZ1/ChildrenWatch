<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageButton
        android:id="@+id/head_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/girl96"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/family_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button2" />
    <ImageButton
        android:id="@+id/family_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/head_btn"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:background="@drawable/family48"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家庭成员"
        android:layout_below="@+id/family_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/transparent"
        android:id="@+id/button2" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/button4" />
    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton2"
        android:background="@drawable/safe48"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电子围栏"
        android:background="@color/transparent"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:id="@+id/button4" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:id="@+id/textView19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignTop="@+id/textView18" />
    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/locationmode48"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位模式"
        android:background="@color/transparent"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/button9" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button6"
        android:id="@+id/textView21" />
    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/family_btn"
        android:layout_alignStart="@+id/family_btn"
        android:layout_marginTop="12dp"
        android:id="@+id/imageButton5"
        android:background="@drawable/iconhistory"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闹钟提醒"
        android:background="@color/transparent"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:id="@+id/button6" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignTop="@+id/textView21"
        android:id="@+id/textView22" />
    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:id="@+id/imageButton6"
        android:background="@drawable/close"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静默时段"
        android:background="@color/transparent"
        android:layout_below="@+id/imageButton6"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:id="@+id/button7" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignTop="@+id/textView22" />
    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:id="@+id/imageButton7"
        android:background="@drawable/find48"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="寻找手表"
        android:background="@color/transparent"
        android:layout_below="@+id/imageButton7"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="添加手表"
        android:gravity="left|center"
        android:id="@+id/button10" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="二维码"
        android:gravity="left|center"
        android:layout_below="@+id/button10"
        android:layout_marginTop="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button11" />

    <Button
        android:id="@+id/off"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="远程关机"
        android:gravity="left|center"
        android:layout_below="@+id/button11"
        android:layout_marginTop="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:text="关于我们"
        android:gravity="left|center"
        android:layout_below="@+id/off"
        android:layout_alignLeft="@+id/off"
        android:layout_alignStart="@+id/off"/>

    <Button
        android:id="@+id/common_problem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="常见问题"
        android:gravity="left|center"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/about"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about"/>

    <Button
        android:id="@+id/Instructions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="操作说明"
        android:gravity="left|center"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/common_problem"
        android:layout_alignLeft="@+id/common_problem"
        android:layout_alignStart="@+id/common_problem"/>

    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="退出登录"
        android:gravity="left|center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Instructions"
        android:layout_alignLeft="@+id/Instructions"
        android:layout_alignStart="@+id/Instructions"/>

</RelativeLayout>