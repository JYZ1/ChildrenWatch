<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Baby_information"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/transparent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/head_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/Avatar"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        android:background="@drawable/bg_textview"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/girl96"
        android:layout_above="@+id/nickname_text"
        android:layout_alignRight="@+id/carry_out"
        android:layout_alignEnd="@+id/carry_out" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text=">"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toEndOf="@+id/iv_head" />


    <TextView
        android:id="@+id/nickname_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/head_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_textview"
        android:textSize="20sp"
        android:text="@string/nickname"
        android:gravity="center_vertical|left" />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/head_text"
        android:layout_alignLeft="@+id/iv_head"
        android:layout_alignStart="@+id/iv_head" />
    <Button
        android:id="@+id/nickname_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text=">"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/nameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_head"
        android:background="@color/transparent"
        android:layout_toRightOf="@+id/iv_head" />

    <TextView
        android:id="@+id/birth_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_textview"
        android:textSize="20sp"
        android:text="@string/birthday"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/nickname_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/birthText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp"
        android:layout_above="@+id/grade_text"
        android:layout_toLeftOf="@+id/nickname_button"
        android:layout_toStartOf="@+id/nickname_button" />
    <Button
        android:id="@+id/birthday_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text=">"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/transparent"
        android:layout_alignBaseline="@+id/birth_text"
        android:layout_alignBottom="@+id/birth_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/birthText"
        android:layout_toEndOf="@+id/birthText" />


    <TextView
        android:id="@+id/grade_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_textview"
        android:textSize="20sp"
        android:text="@string/grade"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/birth_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/gradeText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp"
        android:layout_below="@+id/birthText"
        android:layout_toLeftOf="@+id/birthday_button"
        android:layout_toStartOf="@+id/birthday_button" />
    <Button
        android:id="@+id/grade_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text=">"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/grade_text"
        android:layout_alignBottom="@+id/grade_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/birthday_button"
        android:layout_alignStart="@+id/birthday_button" />

    <TextView
        android:id="@+id/watch_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_textview"
        android:textSize="20sp"
        android:text="@string/Watch_number"
        android:gravity="center_vertical|left"
        android:layout_alignBottom="@+id/watchText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/watchText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical|right"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/grade_text"
        android:layout_toLeftOf="@+id/grade_button" />
    <Button
        android:id="@+id/Watch_number_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:text=">"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/watch_text"
        android:layout_alignBottom="@+id/watch_text"
        android:layout_toEndOf="@+id/watchText"
        android:layout_toRightOf="@+id/watchText" />

    <Button
        android:id="@+id/carry_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watch_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="40dp"
        android:text="@string/carry_out"
        android:gravity="center"/>

</RelativeLayout>